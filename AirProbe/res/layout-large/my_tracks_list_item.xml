<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/sessionIdLinearLayout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/downProgTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_id_text" />

        <TextView
            android:id="@+id/sessionIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trackLengthLayout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/co_1_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/track_length_text" />

        <TextView
            android:id="@+id/trackLengthTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/statusIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/uploaded_none" />

    </LinearLayout>        
    
</LinearLayout>