<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/graphLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0dp" >

	<LinearLayout
	    android:id="@+id/chart"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_marginLeft="22dp"
	    android:layout_marginRight="22dp"
	    android:layout_weight="2.6"
	    android:background="@drawable/vertical_gradient"
	    android:orientation="vertical">
	    <!-- 
	    android:paddingLeft="22dp"
	    android:paddingRight="22dp" >
		 -->	
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/timestampLinearLayout"
	    android:layout_width="match_parent"
	    android:layout_height="35dp"
	    android:gravity="center_horizontal|center_vertical" >

	    <TextView
	        android:id="@+id/tsStartTv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal|center_vertical|left"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:text=""
	        android:textSize="10sp" />

	    <TextView
	        android:id="@+id/tsMiddleTv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center_horizontal|center_vertical"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:text=""
	        android:textSize="10sp" />

	    <TextView
	        android:id="@+id/tsEndTv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal|center_vertical|right"
	        android:paddingLeft="3dp"
	        android:paddingRight="3dp"
	        android:text=""
	        android:textSize="10sp" />
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/border2_linearLayout"
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:layout_alignTop="@id/bottomLinearLayout"
		android:background="@drawable/horizontal_gradient" />
		    
	<LinearLayout
	    android:id="@+id/bottomLinearLayout"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:background="#bbddddaa"
	    android:gravity="center_horizontal|center_vertical"
	    android:orientation="horizontal"
	    android:padding="4dp" >

	    <ImageView
	        android:id="@+id/newDataIv"
	        android:layout_width="44dp"
	        android:layout_height="44dp"
	        android:layout_marginRight="15dp"
	        android:adjustViewBounds="true"
	        android:scaleType="fitCenter"
	        android:src="@drawable/database"
	        android:visibility="invisible" />

	    <ImageView
	        android:id="@+id/gpsStatusIv"
	        android:layout_width="44dp"
	        android:layout_height="44dp"
	        android:layout_marginRight="15dp"
	        android:adjustViewBounds="true"
	        android:scaleType="fitCenter" />

	    <ImageView
	        android:id="@+id/btStatusIv"
	        android:layout_width="44dp"
	        android:layout_height="44dp"
	        android:layout_marginRight="15dp"
	        android:adjustViewBounds="true"
	        android:scaleType="fitCenter" />

	    <ImageView
	        android:id="@+id/interUplStatusIv"
	        android:layout_width="44dp"
	        android:layout_height="44dp"
	        android:adjustViewBounds="true"
	        android:scaleType="fitCenter" />
	</LinearLayout>
</LinearLayout>